<resources>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/holo_green_dark</item>
        <item name="android:colorBackground">@color/colorMyGrey</item>
        <item name="colorPrimary">@android:color/holo_green_light</item>
        <item name="android:textColorPrimary">@android:color/holo_green_light</item>
        <item name="android:colorForeground">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorMyGrey</item>
        <item name="colorPrimaryDark">@android:color/holo_green_dark</item>
        <item name="android:colorPrimary">@android:color/holo_green_light</item>
        <item name="android:colorPrimaryDark">@android:color/holo_green_dark</item>
        <item name="android:textColorSecondary">@android:color/holo_green_light</item>
        <item name="android:textColorSecondaryInverse">@android:color/holo_blue_dark</item>
        <item name="android:textColorHint">@color/greenWhite</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_green_light</item>
        <item name="colorPrimaryDark">@android:color/holo_green_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/colorMyGrey</item>
        <item name="android:textColorPrimary">@color/greenWhite</item>
        <item name="android:windowBackground">@color/colorMyGrey</item>
        <item name="android:textColorPrimaryInverse">@color/greenWhite</item>
        <item name="android:textColorSecondary">?android:attr/textColorHintInverse</item>
        <!--<item name="android:navigationBarColor">@color/greenWhite</item>-->
        <item name="android:textColorHint">@color/greenWhite</item>
        <!--<item name="android:textColorSecondaryInverse">?android:attr/textColorSecondary</item>-->
        <item name="android:statusBarColor">@color/monokaiDarkGreen</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="login_button_style">
        <item name="android:background">@color/colorMyOffGrey</item>
        <item name="android:layout_margin">@dimen/login_button_margin</item>
        <item name="android:textColor">@color/monokaiGreen</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="graph_button_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@color/colorMyOffGrey</item>
        <item name="android:textColor">@color/monokaiGreen</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
