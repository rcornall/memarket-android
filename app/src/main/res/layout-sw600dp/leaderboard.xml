<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:name="com.robthecornallgmail.memarket.Fragments.LeaderboardDialogFragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <TextView
        android:id="@+id/leaderboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Leaderboard"
        android:textStyle="bold"
        android:textColor="@color/greenWhite"/>
    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/leaderboard_recycler_view"
        android:layout_below="@+id/leaderboard_title"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        tools:listitem="@layout/leaderboard_row"
        android:layout_marginBottom="20dp"
        >

    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_below="@id/leaderboard_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/greenWhite"/>



</RelativeLayout>